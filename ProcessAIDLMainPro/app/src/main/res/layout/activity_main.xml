<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#28353b"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/messengerPlay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/play_24"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="24dp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/messengerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AIDL MP3 Play"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="16dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/messengerStop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/stop_24"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="36dp"
        android:layout_marginRight="24dp"
        android:clickable="true"/>

    <ProgressBar
        android:id="@+id/messengerProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@id/messengerPlay"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/music_24"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>